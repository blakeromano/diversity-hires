<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %> 
<body>
    <%- include("./partials/nav.ejs") %> 
    <div class="content">
      <div class="create-blog content">
        <form action="/jobs" method="POST">
          <label for="company">Company:</label>
          <input type="text" name="company" required>
          <br>
          <label for="title">Job title:</label>
          <input type="text" id="title" name="title" required>
          <br>
          <label for="numOfPositions">Number of Positions:</label>
          <input type="number" name="numOfPositions" required>
          <br>
          <label for="snippet">Job Description Snippet:</label>
          <input type="text" id="snippet" name="snippet" required>
          <br>
          <label for="body">Job Description:</label>
          <textarea name="description" required></textarea>
          <br>
          <label for="applicationLink">Link to Apply:</label>
          <input type="url" name="applicationLink" required>
          <br>
          <button>Submit</button>
        </form>
      </div>
    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>