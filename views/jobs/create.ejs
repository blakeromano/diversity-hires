<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/route-styles/create-style.css">
<%- include('../partials/nav') %>

<main>
  <% if (profile.hiringStatus === "Recruiter") { %>
    <form class="submit-form" action="/jobs" method="POST">
      <h1>Post a New Job</h1>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="company" value="<%= profile.company %>" readonly required>
        <label for="company">Company:</label>
        <p class="select-label">* To Change Company, Go to Profile and Change Your Company Affiliation</p>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="title" required>
        <label for="title">Job Title:</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="numOfPositions" required>
        <label for="numOfPositions">Number of Positions:</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="applicationLink" required>
        <label for="applicationLink">Link to Apply:</label>
      </div>
      <div class="form-floating mb-3" >
        <textarea class="form-control" id="floatingInput" name="description"></textarea>
        <label for="description">Job Description:</label>
      </div>
      <div class="btn-div">
        <button class="btn btn-lg btn-success" type="submit">Submit</button>
      </div>
      </form>
      <% } else if (profile.hiringStatus === "") { %>
        <h1 class="error">Please update your Profile to indicate you are a Recruiter to add a Job!</h1>
      <% } %> 
</main>

<%- include('../partials/footer') %>