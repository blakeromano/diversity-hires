<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/route-styles/create-style.css">
<%- include('../partials/nav') %>

<main>
  <% if (profile.hiringStatus === "Recruiter") { %>
    <form class="submit-form" action="/companies" method="POST">
      <h1>Post a New Company</h1>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="companyName" required>
        <label for="companyName">Company Name:</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="location" required>
        <label for="location">Location:</label>
      </div>
      <div class="row">
        <div class="form-floating col-6 mb-3">
          <input type="text" class="form-control" id="floatingInput" name="ceo" required>
          <label for="ceo">CEO:</label>
        </div>
        <div class="form-floating col-6 mb-3">
          <input type="text" class="form-control" id="floatingInput" name="founded" required>
          <label for="founded">Year Founded:</label>
        </div>
      </div>
      <div class="row">
        <div class="form-floating col-6 mb-3">
          <input type="text" class="form-control" id="floatingInput" name="missionStatement" required>
          <label for="missionStatement">Mission Statement:</label>
        </div>
        <div class="form-floating col-6 mb-3">
          <input type="text" class="form-control" id="floatingInput" name="industry" required>
          <label for="industry">Industry:</label>
        </div>
      </div>
      <div class="form-floating mb-3" >
        <textarea class="form-control" id="floatingInput" name="description"></textarea>
        <label for="description">Description:</label>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col-3">
          <p class="select-label" for="companySize">Company Size:</p>
        </div>
        <div class="col-3">
          <select name="companySize" id="">
            <option value="Small >100">Small >100</option>
            <option value="Medium 101-1000">Medium 101-1000</option>
            <option value="Large 1001-10000">Large 1001-10000</option>
            <option value="Extra-Large 10001+">Extra-Large 10001+</option>
          </select>
        </div>
      </div>
      <div class="btn-div">
        <button class="btn btn-lg btn-success" type="submit">Submit</button>
      </div>
      </form>
   <% } else {%>
    <h1 class="error">You Must Update your Profile to be a Recruiter to upload a Company!</h1>
    <% } %> 
</main>

<%- include('../partials/footer') %>